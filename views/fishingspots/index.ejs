<% layout('layouts/boilerplate')%>
    <h1>All Spearfishing Locations:</h1>
    <% for (let location of locations) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=location.images[0].index %>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=location.name%>
                        </h5>
                        <p class="card-text">
                            <%= location.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= location.location%>
                            </small>
                            <small class="text-muted">| Difficulty:
                                <%= location.difficulty%>/5
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/fishingspots/<%=location.id%>">View <%=location.name%></a>
                        <% if( currentUser && location.author.equals(currentUser._id)) {%>
                            <form class="d-inline" action="/fishingspots/<%=location._id%>?_method=DELETE"
                                method="POST">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                            <% } %>
                    </div>
                </div>
            </div>
        </div>
        <% } %>