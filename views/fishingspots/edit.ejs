<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit <%= location.name %>
        </h1>
        <div class="col-6 offset-3">
            <form action="/fishingspots/<%=location.id%>?_method=PUT" method="post" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="name">Name: </label>
                    <input class="form-control" type="text" id="name" name="fishingspot[name]"
                        value="<%= location.name %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location: </label>
                    <input class="form-control" type="text" id="location" name="fishingspot[location]"
                        value="<%= location.location %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="longitude">Longitude: </label>
                    <input class="form-control" type="number" id="longitude" name="fishingspot[longitude]"
                        step="0.000001" value="<%= location.longitude %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="latitude">Latitude: </label>
                    <input class="form-control" type="number" id="latitude" name="fishingspot[latitude]" step="0.000001"
                        value="<%= location.latitude %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description: </label>
                    <input class="form-control" type="text" id="description" name="fishingspot[description]" size="80"
                        value="<%= location.description %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="difficulty">Difficulty : 1 (beginner) to 5 (expert): </label>
                    <input class="form-control" type="number" id="difficulty" min=1 max=5 name="fishingspot[difficulty]"
                        value="<%= location.difficulty %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <div class="form-file custom-file">
                        <input type="file" class="form-file-input" id="image" name="image" multiple>
                        <label class="form-file-label" for="image">
                            <span class="form-file-text custom-file-label">Add image(s)...</span>
                            <span class="form-file-button">Browse</span>
                        </label>
                    </div>
                </div>
                <div class="mb-3">
                    <% location.images.forEach(function(img, i) { %>

                        <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=i%>">Delete?</label>
                        <% })%>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Update</button>
                </div>
            </form>
            <a href="/">Cancel</a>
        </div>
    </div>